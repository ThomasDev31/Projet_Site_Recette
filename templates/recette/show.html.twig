{% extends 'base.html.twig' %}

{% block title %} {{app.user.username}} Recettes{% endblock %}

{% block body %}
    <h1>Vos recettes {{app.user.username}}</h1>
{% if recettes %}
    {% for recette in recettes %}
        <table class="table table-size">
            <tbody>
                <tr>
                    
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ recette.name }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ recette.content }}</td>
                </tr>
                <tr>
                    <th>Duration</th>
                    <td>{{ recette.duration }}</td>
                </tr>
                <tr>
                    <th>File</th>
                    <td><img src="{{ asset('uploads/' ~ recette.file) }}" class="img-size-edit" ></td>
                </tr>
                <tr>
                    <th>CreateAt</th>
                    <td>{{ recette.createAt ? recette.createAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Delete</th>
                    <td>{{ include('recette/_delete_form.html.twig') }}</td>
                </tr>
                <tr>
                    <th>Delete</th>
                    <td><a href="{{ path('recette.editId', { 'id': recette.id }) }}" class="btn btn-lg btn-primary">Edite</a></td>
                </tr>
            </tbody>
        </table>
       
    {% endfor %}
    <div class="btn-add">
            <a class="btn btn-lg btn-primary" href="{{path ('recette.new')}}">New Recette</a>
    </div>
{% else %}
    <div class="btn-add">
        <p> Vous n'avez pas de recettes encore. N'hésitez pas en créer pour les partagées</p>
        <a class="btn btn-lg btn-primary" href="{{path ('recette.new')}}">New Recette</a>
    </div>
{% endif %}
{% endblock %}
